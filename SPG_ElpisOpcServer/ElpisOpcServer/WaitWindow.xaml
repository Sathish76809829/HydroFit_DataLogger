<Window x:Class="ElpisOpcServer.WaitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElpisOpcServer"
        WindowStyle="None"
        mc:Ignorable="d"
        Title="Wait..." Height="100" Width="300" WindowStartupLocation="CenterScreen" >
    <Grid x:Name="stop" Visibility="Visible">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock> Please wait, server components are closing...</TextBlock>
                </StackPanel>
            </Grid>
    </Window>

