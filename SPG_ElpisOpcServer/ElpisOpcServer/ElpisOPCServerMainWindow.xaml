                <Separator Grid.Row="9" VerticalAlignment="Top"></Separator>
                <MenuItem Name="LoggerMenuItem" Grid.Row="10"
                              Click="btnLoggerView_Click">
                    <MenuItem.Icon>
                        <Image Width="25" Height="15" Source="Images/Log.png" />
                    </MenuItem.Icon>
                    <MenuItem.Header>
